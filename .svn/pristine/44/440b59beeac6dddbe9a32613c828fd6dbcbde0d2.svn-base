{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}
	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
    {{include file="$WWW_PATH/kindeditor.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-plus'></i>  {{$la.smallslides.create}}</strong>
				</div>
				<div class='panel-body'>
				<form id='ajaxForm'
                    action='{:U('website/smallslides/add/insert.json')}' method='post'>
					<table class='table table-form'>
					   <tr>
				          <th class='col-md-1 col-xs-2'>{{$la.smallslides.title}}</th>
				          <td class='col-md-5 col-xs-7'>
				          <input type='text' name='data[title]' id='title' value='' class="form-control" />
				          </td>
				          <td>
				          </td>
				       </tr>
				       <tr style="display:none;">
                          <th>{{$la.smallslides.link}}</th>
                          <td>
                            <input type='text' name='data[link]' id='link' value='' class="form-control" />
                          </td>
                          <td>  </td>
                        </tr>
				       <tr>
                          <th>{{$la.smallslides.picture}}</th>
                          <td>
                            <div class="required required-wrapper"></div>
                            <input type="file" class="form-control" tabindex="-1" id="files[]" name="files[]">
                          </td>
                          <td>
                            <label class="text-info">{{$la.file.slideinfo}}</label>
                          </td>
                       </tr>
                        <tr>
                          <th>{{$la.smallslides.label}}</th>
                          <td>
                          <input type='text' name='data[label]' id='label' value='' class='form-control'>
                            </td>
                            <td>
                            </td>
                       </tr>
                       <tr>
				          <th>{{$la.smallslides.desc}}</th>
				          <td colspan='2'>
				          <textarea name='data[desc]' id='desc' rows='15' class='form-control'></textarea>
				           </td>
					   </tr>
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
