{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}

    <div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
        <div class='col-md-10'>
            <div class='panel'>
                <div class='panel-heading'>
                    <strong><i class='icon-picture'></i> {{$la.script.common}}</strong>

                    <div class='panel-actions'>
                        <a href='{:U('module/script/add/default.html')}'
                            class='btn btn-primary'><i class="icon-plus"></i> {{$la.script.create}}</a>
                    </div>
                </div>
                <!-- <form id='sortForm'
                    action='/chanzhieps/www/admin.php?m=slide&f=sort' method='post'>-->
                    <form id='changeForm' method='post'>
                    <table class="table">
                        <tr>
                          <td class='w-140px'>&nbsp;{{$la.script.modechoose}}
                          </td>
                          <td colspan='5'>
                              <select name='data[mode]' id='mode' class='selectMode'>
                                  {{html_options options=$mode_options selected=$mode_choose}}
                              </select>
                          </td>
                          </tr>
                          <tr>
                          <td>&nbsp;{{$la.script.modulechoose}}
                          </td>
                          <td colspan='5'>
                              <select name='data[pid]' id='pid' class='selectModule'>
                                  {{html_options options=$module_options selected=$module_choose}}
                              </select>
                          </td>
                          </tr>
                          <tr>
                          <td>&nbsp;{{$la.script.secondchoose}}
                          </td>
                          <td colspan='5'>
                              <select name='data[sid]' id='sid' class='selectSecond'>
                                  {{html_options options=$second_options selected=$second_choose}}
                              </select>
                          </td>
                          </tr>
                    </table>
                    </form>
                    <form id='sortForm'
                    action='{:U('module/script/default/update.json')}' method='post'>
                    {{if !empty($list)}}
                    <table class='table table-hover table-bordered'>
                        <thead>
                            <tr class='text-center script-th'>
                                <th>{{$la.script.des}}</th>
                                <th>{{$la.script.name}}</th>
                                <th>{{$la.script.createby}}</th>
                                <th>{{$la.actions}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{foreach from=$list item="record"}}
                            <tr class='text-middle script-record'>
                                <td class='text-center'>{{$record.des}}</td>
                                <td class='text-center'>{{$record.name}}</td>
                                <td class='text-center'>{{$record.username}}</td>
                                <td class='text-center'><a
                                    href='{:U('module/script/edit/default/id/{{$record.id}}.html')}'>{{$la.edit}}</a>
                                    <a href='{:U('module/script/default/delete/id/{{$record.id}}.json')}'
                                    class='deleter'>{{$la.delete}}</a></td>
                            </tr>
                            <tr class='text-middle'>
                                <td class='text-center' colspan="4">
                                <table class='table'>
                                     <thead>
			                            <tr class='text-center'>
			                                <th>{{$la.script.ades}}</th>
			                                <th>{{$la.script.aname}}</th>
			                                <th>{{$la.script.auth}}</th>
			                                <th><a href='{:U('module/action/add/default/scriptid/{{$record.id}}.modal')}'
                            class='btn btn-primary ' data-toggle='modal'><i class="icon-plus"></i>{{$la.script.createaction}}</a></th>
			                            </tr>
			                            {{foreach from=$record.action item="action"}}
			                             <tr class='text-middle'>
			                                 <td class='text-center'>{{$action.des}}</td>
			                                 <td class='text-center'>{{$action.name}}</td>
			                                 <td class='text-center'>
			                                 {{foreach from=$rolelist item="outer" key="key"}}
			                                     <input id="role_{{$action.id}}_{{$key}}" type="checkbox" name="data[role][{{$action.id}}][{{$key}}]" value="1"
			                                     {{foreach from=$action.role item="inner"}}
			                                         {{if $inner.id == $key and $inner.operauth == "1"}}
			                                             checked = "checked"
			                                         {{/if}}
			                                     {{/foreach}}
			                                     >&nbsp;&nbsp;<label for="role_{{$action.id}}_{{$key}}">{{$outer}}</label>&nbsp;&nbsp;&nbsp;&nbsp;
			                                 {{/foreach}}
			                                 </td>
			                                 <td class='text-center'><a
                                    href='{:U('module/action/edit/default/id/{{$action.id}}.modal')}' data-toggle='modal'>{{$la.edit}}</a>
                                    <a href='{:U('module/action/default/delete/id/{{$action.id}}.json')}'
                                    class='deleter'>{{$la.delete}}</a></td>
			                             </tr>
			                            {{/foreach}}
			                        </thead>
			                        <tbody>
			                        </tbody>
                                </table>
                                </td>
                            </tr>
                            {{/foreach}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan='6'>&nbsp;<input type='submit' id='submit'
                                    class='btn btn-primary' value='{{$la.script.save}}'
                                    data-loading='{{$la.loading}}' />
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>

    {{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}

</body>
</html>
