{{include file="$WWW_PATH/header.html"}}
<body>
	{{include file="$WWW_PATH/clipboard.html"}}
    {{include file="$WWW_PATH/top_menu.html"}}

	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-edit'></i> {{$la.setting.common}}</strong>
				</div>
				<div class='panel-body'>
				<!-- <form id='sortForm'
					action='/chanzhieps/www/admin.php?m=slide&f=sort' method='post'>-->
				<form id='ajaxForm'
                    action='{:U('weixin/setting/default/update.json')}' method='post'>
					<table class='table table-form'>
					<tr>
                          <th  class="w-200px">{{$la.setting.url}}</th>
                          <td class="w-500px">
                          <input type='text' name='data[url]' id='url' value='{{$url}}' class="form-control" disabled="disabled"/>
                          </td>
                          <td><input type="button" value="{{$la.setting.copy}}" class="btn btn-warning copyBtn" ></td>
                       </tr>
                        <tr>
                          <th>{{$la.setting.token}}</th>
                          <td>
                          <input type='text' name='data[token]' id='token' value='{{$token}}' class="form-control" disabled="disabled"/>
                          </td>
                          <td><input type="button" value="{{$la.setting.copy}}" class="btn btn-warning copyBtn" ></td>
                       </tr>
					   <tr>
				          <th>{{$la.setting.name}}</th>
				          <td>
				          <div class="required required-wrapper"></div>
				          <input type='text' name='data[name]' id='name' value='{{$name}}' class="form-control" />
				          </td>
				          <td></td>
				       </tr>
				       <tr>
                          <th {{if isset($imageurl)}}rowspan="2"{{/if}}>{{$la.setting.picture}}</th>
                          <td>{{if isset($imageurl)}}<img class="image" src="{{$imageurl}}"><input type="hidden" name="data[fileids][]" value="{{$fileid}}"/>{{else}}<input type="file" class="form-control" tabindex="-1" id="files[]" name="files[]">{{/if}}</td>
                          <td></td>
                       </tr>
                       {{if isset($imageurl)}}
                       <tr>
                         <td>
                            <input type="file" class="form-control" tabindex="-1" id="files[]" name="files[]">
                          </td>
                          <td>
                            <label class="text-info">{{$la.file.setinfo}}</label>
                          </td>
                          <td></td>
                       </tr>
                       {{/if}}
				       <tr>
                          <th>{{$la.setting.oid}}</th>
                          <td>
                          <div class="required required-wrapper"></div>
                          <input type='text' name='data[oid]' id='oid' value='{{$oid}}' class="form-control" />
                          </td>
                          <td></td>
                       </tr>
                        <tr>
                          <th>{{$la.setting.appid}}</th>
                          <td colspan='2'>
                          <div class="required required-wrapper"></div>
                          <input type='text' name='data[appid]' id='appid' value='{{$appid}}' class="form-control" />
                          </td>
                       </tr>
                       <tr>
				          <th>{{$la.setting.appsecret}}</th>
				         <td colspan='2'>
                          <div class="required required-wrapper"></div>
                          <input type='text' name='data[appsecret]' id='appsecret' value='{{$appsecret}}' class="form-control" />
				           </td>
					   </tr>
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}
    {{ex fn='exportJs'}}
</body>
</html>
