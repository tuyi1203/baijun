{{include file="$WWW_PATH/header.html"}}
<body>
	{{include file="$WWW_PATH/kindeditor.html"}}
    {{include file="$WWW_PATH/top_menu.html"}}

	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-edit'></i>  {{$la.evaluation.edit}}</strong>
				</div>
				<div class='panel-body'>
				<!-- <form id='sortForm'
					action='/chanzhieps/www/admin.php?m=slide&f=sort' method='post'>-->
				<form id='ajaxForm'
                    action='article_evaluation-edit-update.json' method='post'>
					<table class='table table-form'>
					   <tr>
				          <th class='w-100px'>{{$la.evaluation.title}}</th>
				          <td colspan='2'>
				          <div class="required required-wrapper"></div>
				          <input type='text' name='data[title]' id='title' value='{{$title}}' class="form-control" />
				          <input type="hidden" name="data[id]" value="{{$id}}" />
				          </td>
				       </tr>
				       <tr>
                          <th>{{$la.evaluation.keyword}}</th>
                          <td colspan='2'>
                          <div class=""></div>
                          <input type='text' name='data[keyword]' id='keyword' value='{{$keyword}}' class="form-control" />
                          </td>
                       </tr>
                        <tr>
                          <th>{{$la.evaluation.summary}}</th>
                          <td colspan='2'>
                          <textarea name='data[summary]' id='summary' rows='2' class='form-control'>{{$summary}}</textarea>
                            </td>
                       </tr>
                       <tr>
				          <th>{{$la.evaluation.content}}</th>
				          <td colspan='2'>
				          <div class="required required-wrapper"></div>
				          <textarea name='data[content]' id='content' rows='10' class='form-control'>{{$content}}</textarea>
				           </td>
					   </tr>
					   <!--
					   <tr>
				          <th>{{$la.evaluation.publishtime}}</th>
				          <td>
				            <div class="input-append date">
				              <input type='text' name='data[publishtime]' id='publishtime' value='{{$publishtime}}' class='form-control' />
				              <span class='add-on'><button class="btn btn-default" type="button"><i class="icon-calendar"></i></button></span>
				            </div>
				          </td>
				          <td><span class="help-inline">{{$la.article.note.addedDate}}</span></td>
				        </tr>
				        -->
				        <tr>
				          <th>{{$la.evaluation.status}}</th>
				          <td>
				          {{html_radios options=$status_options name="data[status]" labels=true label_ids=true selected=$status_choose}}
						</td>
				        </tr>
						<tr>
						 <th></th>
                         <td colspan='2'>
                         <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' />
                         </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
