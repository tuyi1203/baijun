{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}
	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-plus'></i>  {{$la.topcase.create}}</strong>
				</div>
				<div class='panel-body'>
				<form id='ajaxForm'
                    action='home_topcase-edit-update.json' method='post'>
					<table class='table table-form'>
					   <tr>
				          <th class='col-md-1 col-xs-2'>{{$la.topcase.title}}</th>
				          <td class='col-md-5 col-xs-7'>
				          <div class="required required-wrapper"></div>
				          <input type='text' name='data[title]' id='title' value='{{$title}}' class="form-control" />
				          </td>
				          <td>
                            <input type="hidden" name="data[id]" value="{{$id}}" />
				          </td>
				       </tr>
                       <tr>
                          <th>{{$la.topcase.category}}</th>
                          <td>
                           <select name='data[category]' id='category' class='form-control chosen selectModule'>
                               {{html_options options=$category_options selected=$category_choose}}
                           </select>
                            </td><td></td>
                       </tr>
				       <tr>
                          <th>{{$la.topcase.link}}</th>
                          <td>
                            <input type='text' name='data[link]' id='link' value='{{$link}}' class="form-control" />
                          </td>
                          <td>  </td>
                        </tr>
                        {{if !empty($url)}}
                       <tr>
                          <th rowspan="2">{{$la.topcase.picture}}</th>
                          <td><img class="image" src="{{$url}}"></td>
                          <td><input type="hidden" name="data[fileids][]" value="{{$fileid}}"/></td>
                       </tr>
                       {{/if}}
				       <tr>
                          {{if empty($url)}}<th >{{$la.topcase.picture}}</th>{{/if}}
                          <td>
                            <input type="file" class="form-control" tabindex="-1" id="upFile" name="upFile">
                          </td>
                          <td>
                            <label class="text-info">{{$la.file.topcaseinfo}}</label>
                          </td>
                       </tr>
                       <tr>
                          <th>{{$la.topcase.label}}</th>
                          <td>
                          <input type='text' name='data[label]' id='label' value='{{$label}}' class='form-control'>
                            </td>
                            <td>
                            </td>
                       </tr>
                       <tr>
                          <th>{{$la.topcase.desc}}</th>
                          <td colspan='2'>
                          <textarea name='data[desc]' id='desc' rows='5' class='form-control'>{{$desc}}</textarea>
                           </td>
                       </tr>
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
