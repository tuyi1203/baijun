{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}

	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-picture'></i>  {{$la.script.edit}}</strong>
				</div>
				<div class='panel-body'>
				<!-- <form id='sortForm'
					action='/chanzhieps/www/admin.php?m=slide&f=sort' method='post'>-->
				<form id='mixForm'
                    action='{:U('module/script/add/insert.json')}' method='post'>
					<table class='table table-form'>
					   <tr>
                          <th class='w-100px'>{{$la.script.mode}}</th>
                          <td class='w-p40'>
                          <select name='data[mode]' id='mode' class='form-control chosen selectMode'>
							{{html_options options=$mode_options selected=$mode_choose}}
						  </select>
                            </td><td></td>
                       </tr>
                        <tr>
                          <th>{{$la.script.modulechoose}}</th>
                          <td>
                           <select name='data[pid]' id='pid' class='form-control chosen selectModule'>
                               {{html_options options=$module_options selected=$module_choose}}
                           </select>
                            </td><td></td>
                       </tr>
                       <tr>
                          <th>{{$la.script.secondchoose}}</th>
                          <td>
                           <select name='data[sid]' id='sid' class='form-control chosen selectSecond'>
                               {{html_options options=$second_options selected=$second_choose}}
                           </select>
                            </td><td></td>
                       </tr>
					   <tr>
				          <th>{{$la.script.name}}</th>
				          <td colspan='2'>
				          <div class="required required-wrapper"></div>
				          <input type='text' name='data[name]' id='name' value='' class="form-control" />
				          </td>
				       </tr>
				       <tr>
                          <th>{{$la.script.des}}</th>
                          <td colspan='2'>
                          <div class="required required-wrapper"></div>
                          <input type='text' name='data[des]' id='des' value='' class="form-control" />
                          </td>
                       </tr>
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
