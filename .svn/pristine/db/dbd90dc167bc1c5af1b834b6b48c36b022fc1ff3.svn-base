{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}
	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
    {{include file="$WWW_PATH/kindeditor.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-building'></i>  {{$la.info.edit}}</strong>
				</div>
				<div class='panel-body'>
				<form id='ajaxForm'
                    action='{:U('website/info/default/update.json')}' method='post'>
					<table class='table table-form' width="100%">
					<tr>
                          <th class="w-180px">{{$la.info.sitetitle}}</th>
                          <td>
                          <input type="text" class="form-control" value="{{$sitetitle}}" id="sitetitle" name="data[sitetitle]">
                           </td>
                           <td>
                           </td>
                       </tr>
                       {{*
                       <tr>
                          <th>{{$la.info.sitekeywords}}</th>
                          <td>
                          <input type="text" class="form-control" value="{{$sitekeywords}}" id="sitekeywords" name="data[sitekeywords]">
                           </td>
                           <td>
                           </td>
                       </tr>
                       <tr>
                          <th>{{$la.info.sitedesc}}</th>
                          <td>
                          <input type="text" class="form-control" value="{{$sitedesc}}" id="sitedesc" name="data[sitedesc]">
                           </td>
                           <td>
                           </td>
                       </tr>
                       *}}
					 <tr>
                          <th>{{$la.info.tel1}}</th>
                          <td>
                          <input type="text" class="form-control" value="{{$tel1}}" id="visiting" name="data[tel1]">
                           </td>
                           <td>
                           </td>
                       </tr>
                       <tr>
                          <th >{{$la.info.qq1}}</th>
                          <td>
                          <input type="text" class="form-control" value="{{$qq1}}" id="qq1" name="data[qq1]">
                           </td>
                           <td>
                           </td>
                       </tr>
                        <tr>
                          <th >{{$la.info.qq2}}</th>
                          <td>
                          <input type="text" class="form-control" value="{{$qq2}}" id="qq2" name="data[qq2]">
                           </td>
                       </tr>
                       {{if !empty($qcode)}}
                       <tr>
                          <th rowspan="2">{{$la.info.qcode}}</th>
                          <td><img class="image" src="{{$qcode}}" style="max-width:800px;"></td>
                          <td><input type="hidden" name="data[fileids][]" value="{{$fileid}}"/></td>
                       </tr>
                       {{/if}}
                       <tr>
                          {{if empty($qcode)}}<th >{{$la.info.qcode}}</th>{{/if}}
                          <td>
                            <input type="file" class="form-control" tabindex="-1" id="files[]" name="files[]">
                          </td>
                          <td>
                            <label class="text-info">{{$la.file.info}}</label>
                          </td>
                       </tr>
					   <tr>
				          <th class='w-100px'>{{$la.info.buttom}}</th>
				          <td colspan='2'>
                          <textarea name='data[buttom]' id='buttom' rows='6' class='form-control'>{{$buttom}}</textarea>
                           </td>
				       </tr>
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}
    {{ex fn='exportJs'}}
</body>
</html>
