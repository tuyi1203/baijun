{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}
	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
    {{include file="$WWW_PATH/chosen.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-edit'></i>  {{$la.person.edit}}</strong>
				</div>
				<div class='panel-body'>
				<form id='ajaxForm'
                    action='group_person-edit-update.json' method='post'>
					<table class='table table-form'>
					   <tr>
				          <th class='col-md-1 col-xs-2'>{{$la.person.name}}</th>
				          <td class='col-md-5 col-xs-7'>
				          <div class="required required-wrapper"></div>
				          <input type='text' name='data[name]' id='name' value='{{$name}}' class="form-control" />
				          </td>
				          <td>
				          <input type="hidden" name="data[id]" value="{{$id}}" />
				          </td>
				       </tr>
				       <tr>
                          <th rowspan="2">{{$la.person.picture}}</th>
                          <td><img class="image" src="{{$url}}"></td>
                          <td><input type="hidden" name="data[fileids][]" value="{{$fileid}}"/></td>
                       </tr>
                       <tr>
                         <td>
                            <input type="file" class="form-control" tabindex="-1" id="files[]" name="files[]">
                          </td>
                          <td>
                            <label class="text-info">{{$la.file.personinfo}}</label>
                          </td>
                       </tr>
				       <tr>
                          <th>{{$la.person.school}}</th>
                          <td>
                            <input type='text' name='data[school]' id='link' value='{{$school}}' class="form-control" />
                          </td>
                          <td>  </td>
                        </tr>
                        <tr>
                          <th>{{$la.person.production}}</th>
                          <td colspan="2">
                          <textarea name='data[production]' id='production' class='form-control' cols="6">{{$production}}</textarea>
                            </td>
                       </tr>
                       <tr>
                          <th>{{$la.person.style}}</th>
                          <td colspan="2">
                          <textarea name='data[style]' id='style' class='form-control' cols="6">{{$style}}</textarea>
                            </td>
                       </tr>
                        <tr>
                          <th>{{$la.person.ideal}}</th>
                          <td colspan="2">
                          <textarea name='data[ideal]' id='style' class='form-control' cols="6">{{$ideal}}</textarea>
                            </td>
                       </tr>
                       <tr>
                          <th>{{$la.person.goodat}}</th>
                          <td colspan="2">
                           <select class="form-control chosen" multiple="multiple" id="goodat" name="data[goodat][]" style="display: none;">
                            {{html_options options=$goodat_options selected=$goodat_choose}}
                           </select>
                            </td>
                       </tr>
                       <tr>
                          <th>{{$la.person.resume}}</th>
                          <td colspan="2">
                          <textarea name='data[resume]' id='resume' class='form-control' cols="6">{{$resume}}</textarea>
                            </td>
                       </tr>
                       <tr>
                          <th>{{$la.person.team}}</th>
                          <td>
                           <select style="width:200px;" name='data[team]' id='team' class='form-control chosen selectModule'>
                               {{html_options options=$team_options selected=$team_choose}}
                           </select>
                            </td><td></td>
                       </tr>
                       <tr>
                          <th>{{$la.person.level}}</th>
                          <td>
                           <select style="width:200px;" name='data[level]' id='level' class='form-control chosen selectModule'>
                               {{html_options options=$level_options selected=$level_choose}}
                           </select>
                            </td><td></td>
                       </tr>
                       <tr>
                        <th>{{$la.person.sort}}</th>
                       <td>
                       <input type='text' style="width:100px;" name='data[sort]' id='sort' value='{{$sort}}' class="form-control" />
                          </td>
                          <td></td>
                       </tr>
                       <tr>
                        <th>{{$la.person.hot}}</th>
                       <td>
                       <input type='text' style="width:100px;" name='data[hot]' id='hot' value='{{$hot}}' class="form-control" />
                          </td>
                          <td></td>
                       </tr>
                       <tr style="display:none;">
                        <th>{{$la.person.homepage}}</th>
                       <td>
                       {{html_radios options=$homepage_options name="data[homepage]" labels=true label_ids=true selected=$homepage_choose}}
                          </td>
                          <td></td>
                       </tr>
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
