{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}

	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-list-ul'></i>&nbsp;{{$la.resume.common}}</strong>
				</div>
				{{if !empty($list)}}
				<!-- <form id='sortForm'
					action='/chanzhieps/www/admin.php?m=slide&f=sort' method='post'>-->
				  <table class='table table-hover table-striped tablesorter'>
				    <thead>
				      <tr>
				        <th class='text-center w-100px'>{{$la.resume.name}}
				</div></th>
				        <th class='text-center w-100px'>{{$la.resume.tel}}
                </div></th>
				        <th class='text-center w-60px'><div class='{{if $orderby=="createtime" and $sort=="desc"}}headerSortDown{{elseif $orderby=="createtime" and $sort=="asc"}}headerSortUp{{else}}header{{/if}}'><a href='{:U('hr/resume/default/sort/currpage/{{$currpage}}/orderby/createtime/sort/{{if $orderby == "createtime"}}{{$activesorting}}{{else}}{{$sorting}}{{/if}}.html')}' >{{$la.resume.createtime}}</a>
                </div></th>
				        <th class='text-center w-60px'><div class='{{if $orderby=="public" and $sort=="desc"}}headerSortDown{{elseif $orderby=="public" and $sort=="asc"}}headerSortUp{{else}}header{{/if}}'><a href='{:U('hr/resume/default/sort/currpage/{{$currpage}}/orderby/public/sort/{{if $orderby == "public"}}{{$activesorting}}{{else}}{{$sorting}}{{/if}}.html')}' >{{$la.resume.publicstatus}}</a>
                </div></th>
                        <th class='text-center w-60px'><div class='{{if $orderby=="mark" and $sort=="desc"}}headerSortDown{{elseif $orderby=="mark" and $sort=="asc"}}headerSortUp{{else}}header{{/if}}'><a href='{:U('hr/resume/default/sort/currpage/{{$currpage}}/orderby/mark/sort/{{if $orderby == "mark"}}{{$activesorting}}{{else}}{{$sorting}}{{/if}}.html')}' >{{$la.resume.mark}}</a>
                </div></th>
				        <th class='text-center w-120px'>{{$la.actions}}</th>
				      </tr>
				    </thead>
				    <tbody>
				    {{foreach from=$list item="kv"}}
                        <tr>
                        <td class='text-center'><a href="{:U('hr/resume/confirm/default/{{$kv.id}}.modal')}" data-toggle='modal'>{{$kv.name}}</a></td>
                        <td class='text-center'>{{$kv.dianhua}}</td>
                        <td class='text-center'>{{$kv.createtime}}</td>
                        <td class='text-center {{if $kv.public == "1"}}is-visible{{/if}}'>{{if $kv.public == "1"}}{{$la.resume.published}}{{else}}{{$la.resume.unpublished}}{{/if}}</td>
                        <td class='text-center {{if $kv.mark == "1"}}is-visible{{/if}}'>{{if $kv.mark == "1"}}{{$la.resume.marked}}{{/if}}</td>
                        <td class='text-center'>
                        {{if $kv.public == "0" and $publishauth == '1'}}
                          <a href='{:U('hr/resume/default/publish/{{$kv.id}}.json')}' class="publisher">{{$la.resume.public}}</a>
                        {{/if}}
                        {{if $markauth == '1'}}
                            {{if $kv.mark == "0"}}
                                <a href='{:U('hr/resume/default/mark/{{$kv.id}}.json')}' class="marker">{{$la.resume.marking}}</a>
                            {{/if}}
                            {{if $kv.mark == "1"}}
                                <a href='{:U('hr/resume/default/mark/{{$kv.id}}.json')}' class="marker">{{$la.resume.unmarking}}</a>
                            {{/if}}
                        {{/if}}
                          {{*
                            <a href='{:U('hr/resume/edit/default/id/{{$kv.id}}.html')}' >{{$la.resume.editor}}</a>
			                <a href='system_file-default-default-objecttype-resume-objectid-{{$kv.id}}.modal' data-toggle='modal'>{{$la.resume.files}}</a>
			                 *}}
			                <a href='{:U('hr/resume/default/delete/id/{{$kv.id}}.json')}' class="deleter">{{$la.delete}}</a>
                        </td>
                        </tr>
				    {{/foreach}}
				          </tbody>
				    <tfoot><tr><td colspan='8'>
				    <div style='float:right; clear:none;' class='page form-inline'>
				    {{$pagelink}}
				        </div></td></tr></tfoot>
				  </table>
				  {{/if}}
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
