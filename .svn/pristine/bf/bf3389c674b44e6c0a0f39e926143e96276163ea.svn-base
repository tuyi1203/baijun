{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}

	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-list-ul'></i>&nbsp;{{$la.category.common}}</strong>
					<div class='panel-actions'><a href='{:U('knowledge/category/add/default.html')}' class="btn btn-primary"><i class="icon-plus"></i> {{$la.category.create}}</a>
				    </div>
				</div>
				<form id='sortForm'
                    action='{:U('knowledge/category/default/update.json')}' method='post'>
				{{if !empty($list)}}
				  <table class='table table-hover table-striped tablesorter table-bordered'>
				    <thead>
				      <tr>
                          <th class="text-center w-100px">{{$la.category.sort}}</th>
                          <th class="text-center w-160px">{{$la.category.name}}</th>
                          <th class="text-center">{{$la.category.desc}}</th>
                          <th class="text-center w-150px">{{$la.actions}}</th>
                      </tr>
				    </thead>
				    <tbody>
				    {{foreach from=$list item="kv"}}
                        <tr>
                        <td class='text-center'><i class='icon-arrow-up'></i> <i
                                    class='icon-arrow-down'></i> <input type='hidden'
                                    name='data[sort][{{$kv.id}}]' id='data[sort][{{$kv.id}}]'
                                    value='{{$kv.sort}}' /></td>
                        <td class='text-center'>{{$kv.name}}</td>
                        <td class='text-center'>{{$kv.desc}}</td>
                        <td class='text-center'>
                          <a href='{:U('knowledge/category/edit/default/{{$kv.id}}.html')}' >编辑</a>
			                <a href='{:U('knowledge/category/default/delete/{{$kv.id}}.json')}' class="deleter">删除</a>
                        </td>
                        </tr>
				    {{/foreach}}
				          </tbody>
		          <tfoot>
                          <tr>
                              <td colspan='6'>&nbsp; <input type='submit' id='submit'
                                  class='btn btn-primary' value='{{$la.category.savesort}}'
                                  data-loading='{{$la.loading}}' />
                              </td>
                          </tr>
                      </tfoot>
				  </table>
				  {{/if}}
				  </form>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
