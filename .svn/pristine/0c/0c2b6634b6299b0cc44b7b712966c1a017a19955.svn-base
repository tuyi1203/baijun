{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}
	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
    {{include file="$WWW_PATH/chosen.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-edit'></i>  {{$la.centre.edit}}</strong>
				</div>
				<div class='panel-body'>
				<form id='ajaxForm'
                    action='single_centre-edit-update.json' method='post'>
					<table class='table table-form'>
					   <tr>
				          <th class='col-md-1 col-xs-2'>{{$la.centre.title}}</th>
				          <td class='col-md-5 col-xs-7'>
				          <div class="required required-wrapper"></div>
				          <input type='text' name='data[title]' id='title' value='{{$title}}' class="form-control" />
				          </td>
				          <td>
				          <input type='hidden' name='data[id]' id='id' value='{{$id}}' />
				          </td>
				       </tr>
				       <tr>
                          <th rowspan="2">{{$la.centre.picture}}</th>
                          <td><img class="image" src="{{$url}}"></td>
                          <td><input type="hidden" name="data[fileids][]" value="{{$fileid}}"/></td>
                       </tr>
                       <tr>
                         <td>
                            <input type="file" class="form-control" tabindex="-1" id="files[]" name="files[]">
                          </td>
                          <td>
                            <label class="text-info">{{$la.file.centreinfo}}</label>
                          </td>
                       </tr>
                        <tr>
                          <th>{{$la.centre.hotitems}}</th>
                          <td colspan="2">
                          <div class="required required-wrapper"></div>
                           <select class="form-control chosen" multiple="multiple" id="hotitems" name="data[hotitems][]" style="display: none;">
                            {{html_options options=$hotitem_options selected=$hotitem_choose}}
                           </select>
                            </td>
                       </tr>
                       <tr>
                          <th>{{$la.centre.event}}</th>
                          <td colspan="2">
                           <select class="form-control chosen" multiple="multiple" id="event" name="data[event][]" style="display: none;">
                            {{html_options options=$event_options selected=$event_choose}}
                           </select>
                            </td>
                       </tr>
                       <tr>
				          <th>{{$la.centre.desc}}</th>
				          <td colspan='2'>
				          <div class="required required-wrapper"></div>
				          <textarea name='data[desc]' id='desc' rows='5' class='form-control'>{{$desc}}</textarea>
				           </td>
					   </tr>
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
