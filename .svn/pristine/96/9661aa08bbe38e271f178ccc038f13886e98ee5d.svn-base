{{include file="$WWW_PATH/header.html"}}
<body>
	{{include file="$WWW_PATH/datepicker.html"}}
	{{include file="$WWW_PATH/kindeditor.html"}}
	{{include file="$WWW_PATH/clipboard.html"}}
    {{include file="$WWW_PATH/top_menu.html"}}
	<div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
		<div class='col-md-10'>
			<div class='panel'>
				<div class='panel-heading'>
					<strong><i class='icon-edit'></i> {{$la.technology.edit}}</strong>
					<div class='panel-actions' id="clipb">
                        <a href='javascript:void(0);'
                            class='btn btn-primary'><i class="icon-building"></i>  {{$la.technology.copyurl}}</a>
                    </div>
				</div>
				<div class='panel-body'>
				<!-- <form id='sortForm'
					action='/chanzhieps/www/admin.php?m=slide&f=sort' method='post'>-->
				<form id='ajaxForm'
                    action='single_technology-default-update.json' method='post'>
					<table class='table table-form'>
					   <tr>
				          <th class='w-100px'>{{$la.technology.title}}</th>
				          <td colspan='2'>
				          <input type='text' name='data[title]' id='title' value='{{$title}}' class="form-control" />
				          <input type="hidden" name="data[id]" value="{{$id}}" />
				          </td>
				       </tr>
				       <tr>
                          <th>{{$la.technology.keyword}}</th>
                          <td colspan='2'>
                          <div class=""></div>
                          <input type='text' name='data[keyword]' id='keyword' value='{{$keyword}}' class="form-control" />
                          </td>
                       </tr>
                        <tr>
                          <th>{{$la.technology.summary}}</th>
                          <td colspan='2'>
                          <textarea name='data[summary]' id='summary' rows='2' class='form-control'>{{$summary}}</textarea>
                            </td>
                       </tr>
                       <tr>
				          <th>{{$la.technology.content}}</th>
				          <td colspan='2'>
				          <div class="required required-wrapper"></div>
				          <textarea name='data[content]' id='content' rows='10' class='form-control'>{{$content}}</textarea>
				           </td>
					   </tr>
					   <!--
					   <tr>
                          <th>{{$la.technology.road}}</th>
                          <td colspan='2'>
                          <div class="required required-wrapper"></div>
                          <textarea name='data[content2]' id='content2' rows='10' class='form-control'>{{$content2}}</textarea>
                           </td>
                       </tr>
                        -->
						<tr>
						 <th></th>
                         <td colspan='2'> <input type='submit' id='submit' class='btn btn-primary' value='{{$la.save}}' data-loading='{{$la.loading}}' /> </td>
                        </tr>
					</table>
				</form>
				</div>
			</div>
		</div>
	</div>
	{{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}
</body>
</html>
