{{include file="$WWW_PATH/header.html"}}
<body>
    {{include file="$WWW_PATH/top_menu.html"}}

    <div class="clearfix">
    {{include file="$WWW_PATH/left_menu.html"}}
        <div class='col-md-10'>
            <div class='panel'>
                <div class='panel-heading'>
                    <strong><i class='icon-picture'></i>  {{$la.topcase.common}}</strong>
                    <div class='panel-actions'>
                        <a href='home_topcase-add-default.html'
                            class='btn btn-primary'><i class="icon-plus"></i>  {{$la.topcase.create}}</a>
                    </div>
                </div>
                <div class="tabs">
                <ul class="nav nav-tabs" role="tablist">
                {{foreach from=$categories item="ca" key="k"}}
                    {{if $ca == $activecategory}}
                        <li class="active">
                            <a href="javascript:void(0);">{{$ca}}</a>
                        </li>
                    {{else}}
                        <li>
                            <a href="home_topcase-default-default-category-{{$k}}.html" data-toggle="tab" role="tab">
                            {{$ca}}</a>
                        </li>
                    {{/if}}
                {{/foreach}}
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <form id='sortForm'
                    action='home_topcase-default-update.json' method='post'>
                    {{if !empty($list)}}
                    <table class='table table-hover table-bordered'>
                        <thead>
                            <tr class='text-center'>
                                <th>{{$la.topcase.sort}}</th>
                                <th>{{$la.topcase.picture}}</th>
                                <th>{{$la.topcase.title}}</th>
                                <th>{{$la.topcase.link}}</th>
                                <th>{{$la.actions}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{foreach from=$list item="record"}}
                            <tr class='text-middle'>
                                <td class='text-center'><i class='icon-arrow-up'></i> <i
                                    class='icon-arrow-down'></i> <input type='hidden'
                                    name='data[sort][{{$record.id}}]' id='data[sort][{{$record.id}}]'
                                    value='{{$record.sort}}' /></td>
                                <td class='text-center'>
                                {{if empty($record.url)}}
                                {{else}}
                                <a target="_blank" href="{{$record.url}}"><img class="image-small" src="{{$record.url}}"></a></td>
                                {{/if}}
                                <td class='text-center'>{{$record.title}}</td>
                                <td class='text-center'><a href="{{$record.link}}" target="_blank">{{$record.link}}</a></td>
                                <td class='text-center'><a
                                    href='home_topcase-edit-default-id-{{$record.id}}.html'>{{$la.edit}}</a>
                                    <a href='home_topcase-default-delete-id-{{$record.id}}.json'
                                    class='deleter'>{{$la.delete}}</a></td>
                            </tr>
                            {{/foreach}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan='6'>&nbsp; <input type='submit' id='submit'
                                    class='btn btn-primary' value='{{$la.topcase.savesort}}'
                                    data-loading='{{$la.loading}}' />
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    {{/if}}
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>

    {{include file="$WWW_PATH/footer.html"}}

    {{ex fn='exportJs'}}

</body>
</html>
